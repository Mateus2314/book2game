# Database Configuration
DATABASE_URL=postgresql://book2game:book2game_dev@localhost:5432/book2game_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=86400  # 24 horas em segundos

# Application Settings
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# Security & Authentication
SECRET_KEY=your-secret-key-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting (slowapi)
RATE_LIMIT_AUTH=5/minute  # Endpoints de autenticação (anti-brute force)
RATE_LIMIT_GENERAL=60/minute  # Endpoints gerais

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:19006  # Web, Expo
CORS_ALLOW_CREDENTIALS=True

# External APIs - Google Books
GOOGLE_BOOKS_API_KEY=your-google-books-api-key
GOOGLE_BOOKS_BASE_URL=https://www.googleapis.com/books/v1

# RAWG API foi removida - não é mais necessária

# External APIs - Hugging Face (AI Classification)
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co/models
MODEL_NAME=valhalla/distilbart-mnli-12-3  # Modelo de classificação switchable
AI_REQUEST_TIMEOUT=30  # Timeout em segundos para chamadas IA
AI_RETRY_MAX_ATTEMPTS=3
AI_RETRY_BACKOFF_FACTOR=2

# Email Configuration (para validação futura)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@book2game.com

# Logging
LOG_ROTATION=10 MB  # Rotação de logs
LOG_RETENTION=7 days  # Retenção de logs
LOG_FORMAT=json  # json ou text

# Railway/Render Deployment (Production)
RAILWAY_ENVIRONMENT=production
RENDER_EXTERNAL_URL=https://book2game-api.onrender.com
